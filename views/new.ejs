<% include partials/header %>

<div class="row justify-content-center">
    <div class="col-lg-7">
        <h1>Create a new Campground</h1>
        
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Campsite Name" name="name">
            </div>
        
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Image URL" name="imageUrl">
            </div>

            <div class="form-group">
            <button class="btn btn-md btn-default btn-block">Submit!</button>
            </div>
        </form>
        
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

