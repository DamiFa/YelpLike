<% include ../partials/header %>


<header class="jumbotron">
    <div class="container">
        <h1>Welcome to YelpCamp</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Create a New Campground</a>
        </p>
    </div>
</header>

<div class="row">
    <% campgrounds.forEach(function(campground){ %>
        <div class="col-lg-3 col-md-6 mb-3 d-flex align-items-stretch">
            <div class="card">
                <img class="card-img-top cropped-image" src="<%= campground.image %>" alt="" height="auto" width="auto">
                <div class="card-body">
                    <h4 class="card-title"><%= campground.name %></h5>
                    <p class="card-text"><%= campground.description.substring(0, 70) %> ...</p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
    <% }); %>
</div>
    
<% include ../partials/footer %>